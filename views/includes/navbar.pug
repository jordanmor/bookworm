    .nav-container
        a.navbar-brand(href='/')
            i.icn-logo.material-icons bookmark_border
            | Bookworm
        button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbar') &#x2630;
        #navbar.collapse.navbar-collapse
            .navbar-nav
                if !currentUser
                    a.nav-item.nav-link(href='register') Sign Up
                a.nav-item.nav-link(href='about') About
                a.nav-item.nav-link(href='contact') Contact
                a.nav-item.nav-link(href='profile') My Profile
                if currentUser
                    a.nav-item.nav-link(href='logout').d-md-none Logout
                else
                    a.nav-item.nav-link(href='login').d-md-none Login
        if currentUser
            .logout-btn
                img.avatar.d-none.d-sm-block(src='/static/images/avatar.png', alt='avatar')
                a.btn.btn-light.login(href='logout') Log Out
        else
            a.btn.btn-info.login(href='login').d-none.d-md-block Login